<%- include('./partials/head') %>

<% if (usuarioLogueado === true) {%>
    <%- include('./partials/headerLogueado') %>
<%} else {%>
    <%- include('./partials/header') %>
<%}%>

<!-- Detail products -->
<div class="container products-wrapper">
    <div class="d-flex align-items-center">
        <h2 class="products-title"><%= productos [0] . nombre %></h2> 
    </div>
    <div class="product-detail">
        <div class="row">
            <article class="col-12 col-lg-8 product-detail-info">
                <img src=<%= productos [0] . imgUrl %> alt="" class="product-detail-img">
                <p class="product-detail-description">
                    Descripci√≥n corta del producto: <br>
                    <%= productos [0] . descripcion %>.</p>
            </article>
            <div class="col-12 col-lg-4">
                <% for (let i =0; i< comments.length ; i++) {%>
                <section class="comments">
                    <article>
                        <img src="<%= comments [i] . imgUser %>"" alt="">
                        <div class="data">
                            <p class="user">
                            <strong> <a href="/users/profile"> <%= comments [i] . usuario %> :</a> </strong>
                            <%= comments [i] . Comentario %></p>
                        </div>
                    </article>
                </section>
                <%}%>
                    
                    <form class="form" action="/productos/detail" method="POST">
                        <input class="form-input" type="text" value="" placeholder="Agrega tu comentario">
                        <button href="/prodctos/detail" type="submit" class="buy-now-button">
                            <a href="/productos/detail">COMENTAR</a>
                        </button>
                    </form>

                <hr>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>


