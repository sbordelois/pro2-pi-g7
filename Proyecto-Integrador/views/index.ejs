
<%- include('./partials/head') %>

<% if (usuarioLogueado === true) {%>
  <%- include('./partials/headerLogueado') %>
  <%} else {%>
    <%- include('./partials/header') %>
<%}%>

<banner class="banner-section">
  <span class="banner-span">
    <img class="banner-img" src="/images/banner-index.png" alt="Banner Publicidad">
  </span>
</banner>

<!-- /Banner -->

<!-- Novedades-->
<div class="container products-wrapper">
  <div class="row">
    <div class="col-12">
    <h2 class="products-title">Novedades</h2>
    </div>
    <% for (let i=0; i < productos.length ; i++) {%>
    <div class="col-12 col-sm-6 col-lg-3">
    <section class="product-box">
      <a href="/productos/detail"> 
      <figure class="product-box_image">
        <img src= <%= productos[i].imgUrl %> alt="producto">
      </figure>
      <article class="product-box_data">
        <h2><%= productos[i].nombre %></h2>
        <p><%= productos[i].descripcion %></p>
        
      </article>
      </a>
    </section>
    </div>
    <%}%>

<!-- Todos los productos -->
<div class="container products-wrapper">
  <div class="row">
    <div class="col-12">
    <h2 class="products-title">Todos Los productos</h2>
    </div>
    <% for (let i=0; i < productos.length ; i++) {%>
    <div class="col-12 col-sm-6 col-lg-3">
    <section class="product-box">
      <a href="/productos/detail"> 
      <figure class="product-box_image">
        <img src= <%= productos [i] . imgUrl %> alt="producto">
      </figure>
      <article class="product-box_data">
        <h2><%= productos [i] . nombre %></h2>
        <p><%= productos [i] . descripcion %></p>
        
      </article>
      </a>
    </section>
    </div>
    <%}%>

<%- include('./partials/footer') %>