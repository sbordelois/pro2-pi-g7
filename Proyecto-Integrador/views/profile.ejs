<%- include('./partials/head')  %>



	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuarios[0] . foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">
						<%= usuarios[0] . nombre %>
						<a href="/users/edit-profile">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<p>  <%= usuarios[0] . email %></p>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
<!-- prodcuts -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
		<h2 class="products-title">Mis productos</h2>
		</div>
		<% for (let i=0;i < productos.length ; i++) {%>
		<div class="col-12 col-sm-6 col-lg-3">
		<section class="product-box">
			<a href="/productos/detail"> 
			<figure class="product-box_image">
				<img src= <%= productos [i] . imgUrl %> alt="producto">
			</figure>
			<article class="product-box_data">
				<h2><%= productos [i] . nombre %></h2>
				<p><%= productos [i] . descripcion %></p>
				<p>Comentarios: <br>
				<%= comments[0].usuario + ': ' + comments[0].Comentario %></p>
			</article>
			</a>
		</section>
	</div>
		<%}%>

<%- include('./partials/footer') %>